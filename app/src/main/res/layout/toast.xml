<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/showtoast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_left_text"
    android:layout_marginRight="@dimen/margin_right_text"
    android:background="@drawable/edit"
    android:layout_marginTop="@dimen/margin_top_text"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:paddingLeft="10dp"
        app:srcCompat="@drawable/transportation_logo" />

    <TextView
        android:id="@+id/toastMsg"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold|italic" />
</LinearLayout>